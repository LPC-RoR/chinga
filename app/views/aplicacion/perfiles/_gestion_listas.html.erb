<%#= render partial: '0p/general/titulo', locals: {c: 'listas', a: nil, titulo: 'Listas', size: '5'} %>
<h4 class='text-black'>Mis listas</h4>
<table class="table table-striped table-sm  thead-dark">
  <tbody>
  	<!-- OpciÃ³n para evitar escribir el parcial _modelo.html.erb en cada controlador-->
  	<% unless coleccion.blank? %>
	  	<% coleccion.each do |lista| %>
	  		<tr>
	  			<td>
	  				<p class="text-<%=(lista.elementos.ids.include?(objeto.id) ? 'muted' : 'success')%>"><small><%= lista.lista %></small></p>
				</td>
				<td>
					<% if lista.elementos.ids.include?(objeto.id) %>
						<%= render partial: '0p/general/btn', locals: {texto: '-', link: "/elementos/#{objeto.id}/desasignar?lista_id=#{lista.id}", clr: 'dark', delete: false} %>
					<% else %>
						<%= render partial: '0p/general/btn', locals: {texto: '+', link: "/elementos/#{objeto.id}/asignar?lista_id=#{lista.id}", clr: 'success', delete: false} %>
					<% end %>
				</td>
			</tr>
		<% end  %>
  	<% end %>
  </tbody>
</table>
