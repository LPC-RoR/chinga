<!-- CARPETAS Y DESPLIEGUE DE CITA -->
<div class='row'>
	<div class= 'col-md-4'>
		<table  class="table table-striped">
			<tbody>

				<% c.classify.constantize::SHOW_FIELDS.each do |field| %>
					<% if filtro_conditional_field?(@objeto, field[0]) %>
						<tr>
							<% case field[1] %>
							<% when 'normal' %>

								<% if c.classify.constantize.column_names.include?(field[0]) %>
									<td><small> <%= field[0] %> </small></td>
									<td><small> <%=  o[field[0]] %> </small></td>
								<% else %>
									<td><small> <%= field[0] %> </small></td>
									<td><small> <%= f_tabla_field(o, field[0]) %> </small></td>
								<% end %>
							<% when 'metodo' %>
								<td><small> <%= field[0] %> </small></td>
								<td><small> <%=  o.send(field[0]) %> </small></td>
							<% when 'diahora' %>

								<% if c.classify.constantize.column_names.include?(field[0]) %>
									<td><small> <%= field[0] %> </small></td>
									<td><small> <%=  l(o[field[0]]) %> </small></td>
								<% else %>
									<td><small> <%= field[0] %> </small></td>
									<td><small> <%= l(f_tabla_field(o, field[0])) %> </small></td>
								<% end %>

							<% end %>
						</tr>
					<% end %>
				<% end %>

			</tbody>
		</table>
	</div>

	<div class='col-md-4'>
		<% unless @objeto.link.blank? %>
			<h5><%= link_to @objeto.titulo, @objeto.link, target: :blank %></h5>
		<% else %>
			<h5><%= @objeto.titulo %></h5>
		<% end %>
		<h6><%= "| #{@objeto.autor} |" %></h6>

		<% unless @objeto.letra.empty? %>
			<small><%= sanitize @objeto.d_letra %></small>
		<% end %>

	</div>

	<div class='col-md-4'>
	</div>
</div>
