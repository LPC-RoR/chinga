<div class='row'>
	<% unless ['ingreso', 'papelera', 'duplicado'].include?(@objeto.estado) %>
		<div class='col-md-6'>

			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: '+ Lista', size: '5'} %>
			<%= form_for :nueva_lista, url: "/listas/nuevo?elemento_id=#{@objeto.id}" do |form| %>
				<div class='form-inline'>
					<%= form.text_field(:lista, size: 56, class: 'form-control' ) %>
					<%= form.submit '+ Lista'  %>
				</div>
			<% end  %>
			</br>

			<% unless @listas_seleccion.empty? %>
				<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Gestion de Listas', size: '5'} %>
				<% if @activo.listas.any? %>
					<%= form_for :lista_base, url: "/listas/agrega_elemento?elemento_id=#{@objeto.id}" do |form| %>
						<div class='form-inline'>
							<%= form.select :lista_id, @listas_seleccion.collect { |lst| [lst.lista, lst.id] }, include_blank: false, prompt: "Seleccione Lista" %>
							<%= form.submit 'Clasificar'  %>
						</div>
					<% end  %>
				<% end %>
				</br>
			<% end %>

		</div>

