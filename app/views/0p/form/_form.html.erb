<div class="container-fluid">
	<%= render partial: '0p/general/titulo', locals: {c: c, a: a, titulo: '', size: '4'} %>

	<%= form_with(model: @objeto, local: true) do |form| %>
		<% if @objeto.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@objeto.errors.count, "error") %> evitan que este registro sea grabado:</h2>

			<ul>
			<% @objeto.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			</ul>
		  
		</div>
		<% end %>

		<% if form_f_detail?(@objeto) %>
			<%= render partial: "#{@objeto.class.name.tableize}/f_detail", locals: {c: c, form: form} %>
		<% else %>
			<%= render partial: '0p/form/detail', locals: {c: c, form: form} %>
		<% end %>

		</br>

		<div class="actions">
		<%= form.submit %>
		</div>
	<% end %>
</div>
